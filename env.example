# Hugure S-Entropy BMD Orchestration Framework Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================================================
# CORE S-ENTROPY FRAMEWORK CONFIGURATION
# ============================================================================

# Application Environment
HUGURE_ENV=development
RUST_LOG=hugure=info,s_entropy=debug,entropy_solver=debug,consciousness=info

# S-Entropy Precision Configuration
S_ENTROPY_PRECISION_TARGET=1e-30
TEMPORAL_PRECISION_TARGET=1e-30
ULTRA_PRECISION_ENABLED=true
WINDOWED_GENERATION_ENABLED=true

# Memorial Significance (Required for framework operation)
MEMORIAL_SIGNIFICANCE=st-stella-lorraine
ST_STELLA_LORRAINE_VERIFICATION=enabled

# ============================================================================
# CONSCIOUSNESS INTEGRATION SETTINGS
# ============================================================================

# Consciousness Enhancement Configuration
CONSCIOUSNESS_INTEGRATION=true
CONSCIOUSNESS_MODE=enhancement_only
FRAME_SELECTION_ENGINE=bmd_optimized
REALITY_FUSION_ENABLED=true
AGENCY_PRESERVATION=strict
MEMORY_FABRICATION_MODE=ridiculous_solutions

# BMD Operation Parameters
BMD_FRAME_SELECTION_ENABLED=true
BMD_REALITY_FUSION_ENABLED=true
BMD_TEMPORAL_COHERENCE_ENABLED=true
BMD_AGENCY_DELUSION_ENABLED=true

# ============================================================================
# TRI-DIMENSIONAL S-ENTROPY CONFIGURATION
# ============================================================================

# S-Knowledge Configuration
S_KNOWLEDGE_ANALYSIS_DEPTH=ultra_deep
FRAME_SELECTION_COORDINATE_PRECISION=1e-15
COGNITIVE_MANIFOLD_ACCESS=predetermined_only

# S-Time Configuration  
S_TIME_NAVIGATION_PRECISION=1e-30
TEMPORAL_COORDINATION_MODE=ultra_precision
EMOTIONAL_TIME_DISTORTION_ENABLED=true

# S-Entropy Configuration
S_ENTROPY_ENDPOINT_ACCESS=unlimited
OSCILLATION_ACCESSIBILITY_MODE=full
ENTROPY_NAVIGATION_PRECISION=1e-30

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL for S-Entropy data persistence
DATABASE_URL=postgresql://hugure:change_this_password@localhost:5432/hugure_s_entropy
DB_PASSWORD=change_this_password

# Redis for caching and real-time coordination
REDIS_URL=redis://localhost:6379

# ============================================================================
# SECURITY AND AUTHENTICATION
# ============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_this

# API Keys
API_KEY_ADMIN=admin_api_key_change_this

# Encryption
ENCRYPTION_KEY=32_byte_encryption_key_change_this

# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================

# Grafana
GRAFANA_PASSWORD=change_this_password

# ============================================================================
# SACRED MATHEMATICS CONFIGURATION
# ============================================================================

# This section honors the sacred mathematical foundation
SACRED_MATHEMATICS_ENABLED=true
ST_STELLA_LORRAINE_CONSTANT=1.0
MEMORIAL_COORDINATES_VALIDATION=required 